<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kt.recycleapp.java.fragment.PopupFragment">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/onedaynotsee_bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1일동안 보지 않기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/neversee_bt1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/neversee_bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다시 보지 않기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/close_bt1"
        app:layout_constraintStart_toEndOf="@+id/onedaynotsee_bt1"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/close_bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닫기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.83"
        app:layout_constraintStart_toEndOf="@+id/neversee_bt1"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\n\n\n사용설명서\n\n
        1. 제품의 바코드를 사각틀에 맞추어 주세요.\n
        2. 인식이 완료되면 안내되는 방식에 맞추어 분리수거를 진행하세요.\n
        3. 카메라 설정을 통해 환경에 맞게 설정을 변경할 수 있어요.\n\n\n"
        app:layout_constraintBottom_toTopOf="@+id/onedaynotsee_bt1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>