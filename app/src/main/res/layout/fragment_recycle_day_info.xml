<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:clickable="true"
    tools:context="com.kt.recycleapp.java.fragment.RecycleDayInfoFragment">


    <TextView
        android:id="@+id/nowwhere_bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="현재 위치정보"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dayoftheweektoday_bt1"
        android:layout_width="101dp"
        android:layout_height="55dp"
        android:layout_marginTop="80dp"
        android:text="오늘은 목요일"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nowwhere_bt1" />

    <TextView
        android:id="@+id/dayoftheweektomorrow_bt1"
        android:layout_width="97dp"
        android:layout_height="36dp"
        android:layout_marginTop="56dp"
        android:text="내일은 금요일"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dayoftheweektoday_bt1" />

    <TextView
        android:id="@+id/canrecycle_bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="92dp"
        android:text="1번가능품목"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dayoftheweektomorrow_bt1" />

    <TextView
        android:id="@+id/canrecycle_bt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="92dp"
        android:text="2번가능품목"
        app:layout_constraintStart_toEndOf="@+id/canrecycle_bt1"
        app:layout_constraintTop_toBottomOf="@+id/dayoftheweektomorrow_bt1" />


</androidx.constraintlayout.widget.ConstraintLayout>