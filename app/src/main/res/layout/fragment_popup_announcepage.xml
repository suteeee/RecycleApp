<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="500dp"
    android:layout_height="800dp"
    android:layout_gravity="center"
    android:background="@color/main_backg_color"
    tools:context="com.kt.recycleapp.java.fragment.PopupFragmentAnnouncepage">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/main_backg_color"
        android:textColor="@color/main_text_color"
        android:fontFamily="@font/gmarket_middle"
        android:text="@string/announceMent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/close_bt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/common_buttom_design"
        android:fontFamily="@font/gmarket_middle"
        android:textSize="10sp"
        android:text="닫기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.83"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>