<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AskDataAdd_layout"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/main_backg_color"
    tools:context="com.kt.recycleapp.java.fragment.PopupFragmentAddpage">

    <Button
        android:id="@+id/askYes_bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/common_buttom_design"
        android:fontFamily="@font/font1"
        android:text="추가하러 가기 >>>"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/askNo_bt1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/attention_tv1" />

    <Button
        android:id="@+id/askNo_bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/main_backg_color"
        android:fontFamily="@font/font1"
        android:text="취소"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/askYes_bt1" />

    <TextView
        android:id="@+id/addInfo_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/font1"
        android:gravity="center"
        android:text="@string/askDataAdd"
        android:textColor="@color/main_text_color"
        app:layout_constraintBottom_toTopOf="@+id/attention_tv1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/attention_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/font2"
        android:gravity="center"
        android:text="@string/attention"
        android:textColor="#F90404"
        app:layout_constraintBottom_toTopOf="@+id/askYes_bt1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addInfo_tv1" />


</androidx.constraintlayout.widget.ConstraintLayout>